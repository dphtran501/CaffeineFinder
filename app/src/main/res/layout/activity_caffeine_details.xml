<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.caffeinefinder.CaffeineDetailsActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/detailsCaffeineMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailsNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="Name"/>

        <TextView
            android:id="@+id/detailsAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Address"/>

        <TextView
            android:id="@+id/detailsPhoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Phone Number"/>

        <TextView
            android:id="@+id/detailsLatLngTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lat Lng"/>
    </LinearLayout>


</LinearLayout>
